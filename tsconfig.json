{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@utils/*": [
        "src/common/utils/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@root/*": [
        "."
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@sql/*": [
        "./prisma/sql/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
    }
  },
  "include": [
    "src"
  ]
}