{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@features/*": ["src/features/*"],
      "@core/*": ["src/core/*"],
      "@lib/*": ["src/lib/*"],
      "@root/*": ["src/*"],
       "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
      "@controllers/*": ["controllers/*"]
    }
  },
  "include": ["src"]
}
